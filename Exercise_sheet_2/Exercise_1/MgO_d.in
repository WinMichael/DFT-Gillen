&control
    calculation = 'vc-relax'
    prefix='MgO',
    tprnfor = .true.
    pseudo_dir = './',
    outdir='TMP_DIR/',
    forc_conv_thr = 0.0004
 /
 &system
    ibrav=0, nat= 8, ntyp= 2,
    ecutwfc =110.0, input_dft = 'pbesol'
 /
