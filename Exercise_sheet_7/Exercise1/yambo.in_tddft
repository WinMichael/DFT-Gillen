DIP_Threads=0                  # [OPENMP/X] Number of threads for dipoles
Chimod= "PF"                 # [X] IP/Hartree/ALDA/LRC/PF/BSfxc
PF_alpha="RBO"
FxcGRLc= 1 RL                  # [TDDFT] XC-kernel RL size
NGsBlkXd= 1 RL                 # [Xd] Response block size
