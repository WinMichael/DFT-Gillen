chi                            # [R CHI] Dyson equation for Chi.
tddft                          # [R   K] Use TDDFT kernel
X_q_0_CPU= "1 4 4 1"           # [PARALLEL] CPUs for each role
X_q_0_ROLEs= "g k c v"         # [PARALLEL] CPUs roles (g,k,c,v)
