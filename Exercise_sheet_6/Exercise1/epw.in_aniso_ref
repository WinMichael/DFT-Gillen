--
&inputepw
  prefix      = 'MgB2',
  amass(1)    = 24.305,
  amass(2)    = 10.811
  outdir      = '../bands/TMP_DIR/'


  !!!!!! Wannier part !!!!!!!!!
  wannierize  = .false.              !use Wannier90 to wannierize the electronic bands and write the necessary files
  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!



  !!!!!! electron-phonon coupling and eliashberg function calculation !!!!
  ep_coupling = .true.              !run electron-phonon coupling calculation
  elph        = .true.              !calculate electron-phonon coupling coefficients
  kmaps       = .true.              !read precalculated rec. grid maps from files
  epbwrite    = .false.             !do not write electron-phonon matrix on coarse grid in Bloch basis to hard disk
  epbread     = .false.             !do not read electron-phonon matrix on coarse grid in Bloch basis from hard disk (for restart purposes)

  epwwrite = .false.                !do not write electron-phonon matrix on coarse grid in Wannier basis to hard disk  
  epwread  = .true.                 !read electron-phonon matrix on coarse grid in Wannier basis from hard disk (for restart purposes)

  iverbosity  = 2                   !verbose output


  eps_acustic = 2.0                 !Lowest frequency boundary for the inclusion of acoustic modes
  ephwrite    = .true.              !Writes .ephmat files used when eliasberg = .true. 

  fsthick     = 0.4  ! eV           !include states in a 0.4 eV windows around the Fermi energy for the Eliashberg calcs
  eptemp      = 300  ! K            !Temperature(s) for Fermi occupation
  degaussw    = 0.10 ! eV           !smearing of the energy-conserving delta functions
  delta_smear = 0.04 ! eV

  degaussq     = 0.5 ! meV          !smearing for sum over q in the electron-phonon coupling

  eliashberg  = .true.              !Calculate the eliashberg function and related quantities and solve the Eliashberg gap equations

  laniso = .true.                   !calculate and use the anisotropic Eliashberg function
  limag = .true.                    !use the imaginary axis version of the Eliashberg gap equations
  lpade = .true.                    !use Pade-type approximants for analytic continuation of the solutions along the imagrinary frequency axis onto the real frequency axis

  conv_thr_iaxis = 1.0d-4           !convergence threshold

  wscut = 1.0   ! eV                !Upper limit over frequency integration/summation in the Eliashberg eq

  nstemp   = 6                      !number of temperatures within the temperature range defined below
  tempsmin =  5.00                  !lower end of the temperature range to be considered
  tempsmax = 30.00                  !upper end of the temeprature range to be considered. This should not be much higher than Tc.

  nsiter   = 500                    !max number of iterations for the self-consistent solution of the Eliashberg equations

  muc     = 0.16                    !value of the "Coulomb pseudopotential", a measure for the repulsive Coulomb interaction between electrons on the Fermi surface

  dvscf_dir   = '../phonons/save'   !path where EPW can find the save folder with the phonon data
  
  nk1         = 6                   !coarse k-point grid used for the calculation of the electronic structure
  nk2         = 6           
  nk3         = 6

  nq1         = 6                   !coarse q-point grid used for the calculation of the phonon spectrum
  nq2         = 6                   !the coordinates q-points of the symmetry reduced grid are defined below. these points have to be exactly the same as those from MgB2.dyn0 
  nq3         = 6

  mp_mesh_k = .true.                !the fine grids that the EPC matrix is interpolated to are defined as Monkhorst-Pack grids
  nkf1 = 12                         !dimensions of the fine k-point grid
  nkf2 = 12
  nkf3 = 12

  nqf1 = 12                         !dimensions of the fine q-point grid
  nqf2 = 12
  nqf3 = 12
