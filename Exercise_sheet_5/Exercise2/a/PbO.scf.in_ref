&control
    calculation = 'vc-relax'
    restart_mode='from_scratch',
    prefix='PbO',
    tprnfor = .true.
    pseudo_dir = '../',
    outdir='TMP_DIR/'
 /
 &system
    ibrav=0, nat= 4, ntyp= 2,
    ecutwfc =90.0, input_dft = 'lda'
 /
 &electrons
    conv_thr =  1.0d-10
 /
&ions
 ion_dynamics = 'bfgs'
 /
&cell
 cell_dynamics = 'bfgs',
 press = 0.0,
 press_conv_thr = 0.01
 cell_dofree='2Dxy'
/
ATOMIC_SPECIES
 Pb 207.2  Pb.nc.UPF
  O  16.0   O.nc.UPF
